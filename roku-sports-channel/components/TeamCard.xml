<?xml version="1.0" encoding="utf-8" ?>
<!-- TeamCard: Team logo card for favorites -->
<component name="TeamCard" extends="Group">
    <interface>
        <field id="itemContent" type="node" onChange="onContentChanged" />
    </interface>

    <script type="text/brightscript" uri="TeamCard.brs" />

    <children>
        <Rectangle id="teamBg" width="160" height="160" color="#1C1C3A" cornerRadius="12" />
        <Poster id="teamLogo" width="100" height="100" translation="[30, 10]" />
        <Label id="teamName" translation="[10, 120]" width="140"
               font="font:SmallestBoldSystemFont" color="#FFFFFF"
               horizAlign="center" maxLines="2" />
    </children>
</component>
